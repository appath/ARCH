#!/bin/bash

green='\e[1;32m'
okeanblue=''
yellow=''

check_root() {
	if [[ $EUID -ne 0 ]]; then
		echo " Error!"
		echo " run as administrator"
		exit 1
	fi
}

check_root

if tets (error!)
then
	ifconfig enp0s3 up
	dhclient enp0s3
	sleep 5s

	clear
	echo " # Internet PING!"
	echo " # network diagnostics in connection speed requests"
	ping -c2 127.0.0.1
	echo -e $green " ================================================= ";
	ping -c3 bing.com
fi

