#!/bin/bash
clear
echo -e "\e[32m::\033[0m Check point"
apt update
echo -e "\e[32m::\033[0m Outputting packages that need to be updated"
apt list --upgradable
echo -e "\e[31mKali GNU/Linux\033[0m to update packages. Run 'apt upgrade' to see them."
# Run sudo Script ./+check
# simple facilitates action
# executable chmod +x +check
# Performs simple packet validation actions and prints a list
# to update packages
# color http://misc.flogisoft.com/bash/tip_colors_and_formatting
# end
